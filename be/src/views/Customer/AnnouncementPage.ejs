<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1, width=device-width" />

    <link rel="stylesheet" href="../css/global.css" />
    <link rel="stylesheet" href="../css/AnnouncementPage.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Mulish:wght@500;600;700;800&display=swap" />
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Gotham:ital,wght@0,300;0,400;0,500;0,700;1,400&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poller One:wght@400&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Prosto One:wght@400&display=swap" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Plus Jakarta Sans:wght@500&display=swap" />
</head>

<body>
    <div class="notification-container">
        <button class="notification-button" onclick="showNotifications(0)">Thông báo quan trọng</button>
        <button class="notification-button" onclick="showNotifications(1)">Thông báo nhắc nhở học phí</button>
        <button class="notification-button" onclick="showNotifications(2)">Thông báo biến động</button>
        <button class="notification-button" onclick="showNotifications(3)">Mục thông báo khác</button>
    </div>

    <div class="notification-list-container">
        <!-- Danh sách thông báo quan trọng -->
        <div id="notificationList0" class="notification-list">
            <ul>
                <script>
                    // Lặp 20 lần để tạo 20 mục thông báo và dấu gạch ngang cho danh sách 0
                    for (let i = 0; i < 20; i++) {
                        document.write('<li>Có sự kiện quan trọng vào ngày mai.</li>');
                        document.write('<li>-------------------------------------------------------------</li>');
                    }
                </script>
            </ul>
        </div>

        <!-- Danh sách thông báo nhắc nhở học phí -->
        <div id="notificationList1" class="notification-list">
            <ul>
                <script>
                    // Lặp 20 lần để tạo 20 mục thông báo và dấu gạch ngang cho danh sách 1
                    for (let i = 0; i < 20; i++) {
                        document.write('<li>Hạn chót nộp học phí cho học kỳ này là ngày 30/04/2024.</li>');
                        document.write('<li>-------------------------------------------------------------</li>');
                    }
                </script>
            </ul>
        </div>

        <!-- Danh sách thông báo biến động -->
        <div id="notificationList2" class="notification-list">
            <ul>
                <script>
                    // Lặp 20 lần để tạo 20 mục thông báo và dấu gạch ngang cho danh sách 2
                    for (let i = 0; i < 20; i++) {
                        document.write('<li>Giá cổ phiếu XYZ tăng 10% trong phiên giao dịch hôm nay.</li>');
                        document.write('<li>-------------------------------------------------------------</li>');
                    }
                </script>
            </ul>
        </div>

        <!-- Danh sách mục thông báo khác -->
        <div id="notificationList3" class="notification-list">
            <ul>
                <script>
                    // Lặp 20 lần để tạo 20 mục thông báo và dấu gạch ngang cho danh sách 3
                    for (let i = 0; i < 20; i++) {
                        document.write('<li>Mục thông báo khác 1</li>');
                        document.write('<li>-------------------------------------------------------------</li>');
                    }
                </script>
            </ul>
        </div>
    </div>
    <div class="rectangle-parent9" id="rectangle-parent9">
        <span>Back</span>
    </div>

    <script src="../JS/AnnoucementPage.js"></script>
    <script>
        var back = document.getElementById("rectangle-parent9");
        if (back) {
            back.addEventListener("click", function (e) {
                window.location.href = "/homepage";
            });
        }
    </script>
</body>

</html>